generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model otp {
  id       Int  @id @default(autoincrement())
  otp      Int  @unique(map: "Otp_otp_key")
  authorId Int  @unique(map: "Otp_authorId_key")
  user     user @relation(fields: [authorId], references: [id], map: "Otp_authorId_fkey")
}

model otpdoctor {
  id         Int        @id @default(autoincrement())
  otp        Int        @unique(map: "Otpdoctor_otp_key")
  authorId   Int        @unique(map: "Otpdoctor_authorId_key")
  userdoctor userdoctor @relation(fields: [authorId], references: [id], map: "Otpdoctor_authorId_fkey")
}

model user {
  id        Int      @id @default(autoincrement())
  email     String   @unique(map: "User_email_key")
  name      String
  lastname  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime
  foto      String?
  otp       otp?
}

model userdoctor {
  id               Int        @id @default(autoincrement())
  email            String     @unique(map: "UserDoctor_email_key")
  name             String
  lastname         String
  password         String
  foto             String?
  MedicalSpecialty String
  ContactPhone     String
  WorkExperience   String
  OfficeAddress    String
  WorkingHours     String
  Exequatur        String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime
  otpdoctor        otpdoctor?
}
